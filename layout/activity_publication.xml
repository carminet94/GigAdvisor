<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublicationActivity">

    <include layout="@layout/toolbar"/>


    <LinearLayout
        android:layout_marginTop="65dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/josefin_sans_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publications &amp; Presentations"
            android:gravity="center"
            android:textSize="35sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorTitle"
            android:textStyle="bold"/>

        <TextView
            android:fontFamily="@font/josefin_sans_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/publication1"/>

        <TextView
            android:id="@+id/seemore1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See more..."
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorTitle"/>

        <TextView
            android:fontFamily="@font/josefin_sans_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/publication2"/>

        <TextView
            android:id="@+id/seemore2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See more..."
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorTitle"/>

        <TextView
            android:fontFamily="@font/josefin_sans_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/publication3"/>

        <TextView
            android:id="@+id/seemore3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See more..."
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorTitle"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_navigation"
        android:layout_alignParentBottom="true"
        app:itemIconSize="40sp"
        app:itemBackground="@color/grey"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"/>

</RelativeLayout>