<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewRatingActivityUber">

    <include layout="@layout/toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/platfromrating"
        android:layout_height="35dp"
        android:layout_marginTop="50dp">

        <TextView
            android:fontFamily="@font/josefin_sans_light"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="SEE PLATFORM'S RATING!"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/uber" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="19dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/josefin_sans_light"
                        android:layout_gravity="center"
                        android:id="@+id/textView7"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="19sp"
                        android:text="Safety at work:"
                        android:textColor="#6c757d"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/viewSAW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textColor="@color/SafetyAtWork"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="180dp"
                    android:layout_height="1dp"
                    android:layout_above="@+id/menu_navigation"
                    android:background="#bebebe"></View>


                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/josefin_sans_light"
                        android:layout_gravity="center"
                        android:id="@+id/textView8"
                        android:layout_width="90dp"
                        android:textSize="19sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Contracts transparency:"
                        android:textColor="#6c757d"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/viewCT"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/Contractstransparency"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="180dp"
                    android:layout_height="1dp"
                    android:layout_above="@+id/menu_navigation"
                    android:background="#bebebe"></View>

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/josefin_sans_light"
                        android:id="@+id/textView9"
                        android:layout_gravity="center"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="19sp"
                        android:text="Payment timeliness:"
                        android:textColor="#6c757d"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/viewPTL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textColor="@color/Paymenttimeliness"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="180dp"
                    android:layout_height="1dp"
                    android:layout_above="@+id/menu_navigation"
                    android:background="#bebebe"></View>

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/josefin_sans_light"
                        android:id="@+id/textView10"
                        android:layout_gravity="center"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="19sp"
                        android:text="Platform's fairness:"
                        android:textColor="#6c757d"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/viewPF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/Platformsfairness"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="180dp"
                    android:layout_height="1dp"
                    android:layout_above="@+id/menu_navigation"
                    android:background="#bebebe"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/josefin_sans_light"
                        android:id="@+id/textView11"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:textSize="19sp"
                        android:layout_weight="1"
                        android:text="Rating: "
                        android:textColor="#6c757d"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/txtUber"
                        android:text="TextView"
                        android:textSize="18sp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#6c757d"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/trendUber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to rating trend..."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTitle"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/listRating"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

</RelativeLayout>