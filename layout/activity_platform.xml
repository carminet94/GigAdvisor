<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cecece"
    tools:context=".PlatformActivity">

    <include layout="@layout/toolbar"/>


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:background="@color/rateyourgig"
            android:layout_height="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/josefin_sans_light"
                android:text="RATE YOUR GIG!"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/josefin_sans_light"
            android:gravity="left"
            android:text="@string/platformMessage"
            android:textSize="28sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:padding="14dp"
                android:rowCount="3">


        <!-- Riga 1 -->

        <!-- Colonna 1-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/uberImage"
                        android:layout_width="210dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/Uber"
                        android:src="@drawable/uber" />

                    <TextView
                        android:id="@+id/uberType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transport_service"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/rateButtonUber"
                        android:layout_width="130dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:background="#bad3e0"
                        android:elevation="5dp"
                        android:text="@string/Rate"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:enabled="false"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        <!-- Colonna 2-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/foodoraImage"
                    android:layout_width="210dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/Foodora"
                    android:src="@drawable/foodora" />

                <TextView
                    android:id="@+id/foodoraType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/food_delivery"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/rateButtonFoodora"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="#bad3e0"
                    android:elevation="5dp"
                    android:text="@string/Rate"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:enabled="false"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Riga 2 -->

        <!-- Colonna 1-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_margin="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/juesteatImage"
                    android:layout_width="210dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/Just_Eat"
                    android:src="@drawable/justeat" />

                <TextView
                    android:id="@+id/justeatType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_delivery"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/rateButtonJustEat"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="#bad3e0"
                    android:elevation="5dp"
                    android:text="@string/Rate"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:enabled="false"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Colonna 2-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="8dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/deliverooImage"
                    android:layout_width="210dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/Deliveroo"
                    android:src="@drawable/deliveroo" />

                <TextView
                    android:id="@+id/deliverooType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_delivery"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/rateButtonDeliveroo"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="#bad3e0"
                    android:elevation="5dp"
                    android:text="@string/Rate"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:enabled="false"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Riga 3 -->

        <!-- Colonna 1-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="8dp">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/amazonImage"
                        android:layout_width="210dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/Amazon_Mechanical_Turk"
                        android:src="@drawable/amazon" />

                    <TextView
                        android:id="@+id/amazonType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/crowdsourcing"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/rateButtonAmazon"
                        android:layout_width="130dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:background="#bad3e0"
                        android:elevation="5dp"
                        android:text="@string/Rate"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:enabled="false"/>

                    <!--<TextView
                    android:id="@+id/amazonType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crowdsourcing"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="italic" />
                -->


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        <!-- Colonna 2-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="8dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/upworkImage"
                    android:layout_width="210dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/UpWork"
                    android:src="@drawable/upwork" />

                <TextView
                    android:id="@+id/upworkType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/micro_tasking"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/rateButtonUpWork"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="#bad3e0"
                    android:elevation="5dp"
                    android:text="@string/Rate"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:enabled="false"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>


        </ScrollView>



    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_navigation"
        android:layout_alignParentBottom="true"
        app:itemIconSize="40sp"
        app:itemBackground="@color/grey"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"/>

</RelativeLayout>